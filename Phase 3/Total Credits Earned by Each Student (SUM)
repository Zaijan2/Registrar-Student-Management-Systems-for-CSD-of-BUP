SELECT 
    s.StudentID, 
    CONCAT(s.firstname, ' ', s.lastname) AS StudentName,
    SUM(c.credits) AS TotalCredits
FROM 
    student s
JOIN 
    course c ON s.CourseID = c.CourseID
JOIN 
    enrollment e ON s.StudentID = e.StudentID
WHERE 
    e.status = 'Completed'
GROUP BY 
    s.StudentID
HAVING 
    SUM(c.credits) > 0
ORDER BY 
    TotalCredits DESC;
